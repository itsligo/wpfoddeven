<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="wpfOddEvenGame.WPFWindow"
	Title="Odd 'n Even" Height="300" Width="250" MinWidth="200" xmlns:wpfOddEvenGame="clr-namespace:wpfOddEvenGame">
    
    <StackPanel MinHeight="250" MinWidth="200" Width="Auto" Height="Auto" Background="Honeydew">
		<DockPanel>
			<TextBlock Text="{Binding ElementName=sldRate, Path=Value}" Width="20" VerticalAlignment="Center" 
					   FontSize="18" Foreground="LightBlue" DockPanel.Dock="Right" Name="txtSlider"></TextBlock>
			<Slider x:Name="sldRate" Margin="10" ValueChanged="sldRate_ValueChanged" Minimum="1"></Slider>
		</DockPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button x:Name="btnStart" Content="_Start" Click="btnStart_Click" Margin="5" Padding="5"/>
			<Button x:Name="btnStop" Content="_Stop" Click="btnStop_Click" IsEnabled="False" Margin="5" Padding="5"/>
		</StackPanel>        
		<TextBox Text="99" FontSize="48" x:Name="txtRandom" HorizontalContentAlignment="Center" Margin="50,20"/>
		<TextBlock TextWrapping="Wrap" FontSize="28" TextAlignment="Center" x:Name="txtResult"><Run Text="Odd: 0 Even: 0"/></TextBlock>
	</StackPanel>
</Window>
